@page "/schedule"
@using System.Globalization
@inject IViewBag ViewBag

<Schedule date="DateTime.Now"></Schedule>



@code {
    protected override async Task OnInitializedAsync()
    {
        ViewBag.заголовок_страницы = $"Расписание богослужений на {@CultureInfo.GetCultureInfo("ru-RU").DateTimeFormat.GetMonthName(DateTime.Now.Month).ToLower()} {DateTime.Now.Year} года";
    }
}
