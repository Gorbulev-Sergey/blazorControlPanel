<div id="modal_album" class="bg-dark border-0 m-0 p-0" tabindex="-1">
    @*Содержимое диалогового окна*@
    <div id="carouselControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var photo in album.images)
            {
                if (photo == album.images.ElementAt(0))
                {
                    <div class="carousel-item active">
                        <img class="vh-100" src="@photo.url">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="vh-100" src="@photo.url">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @*Кнопка закрыть диалоговое окно*@
    <button type="button" class="close text-white p-2 m-2 position-absolute" style="z-index:10; right:0; top:0" @onclick="()=>закрыть()">
        <i class="fas fa-times"></i>
    </button>
</div>





@code {
    [Parameter]
    public int ID { get; set; }

    imagesAlbum album = new imagesAlbum();

    protected override async Task OnInitializedAsync()
    {
        album = await PhotosService.imagesAlbum(ID);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeAsync<string>("Show_album", "modal_album");
    }

    async Task закрыть()
    {
        await JSRuntime.InvokeAsync<string>("Hidden_album", "modal_album");
        NavigationManager.NavigateTo("/photos");
    }
}
